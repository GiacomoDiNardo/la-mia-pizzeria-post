@model Pizza

<form asp-controller="Pizza" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <strong>Nome:</strong>
        <input asp-for="Name" class="d-block w-100" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <strong>Descrizione:</strong>
        <textarea asp-for="Description" class="d-block w-100" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <strong>Immagine:</strong>
        <input asp-for="Image" class="d-block w-100" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <strong>Prezzo:</strong>
        <input asp-for="Prezzo" class="d-block w-100" />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>
    <div class="text-end">
        <input type="submit" class="btn btn-small btn-success" value="Salva">
    </div>
</form>